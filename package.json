{
  "name": "testrunner-packages",
  "private": true,
  "scripts": {
    "install:comparisons": "cd comparisons && npm install",
    "postinstall": "npm run install:comparisons",
    "pretest": "prettier . --check && eslint . && tsc && npm run test:comparisons",
    "prettier": "prettier . --write",
    "test": "npm test --workspaces",
    "test:comparisons": "cd comparisons && npm test"
  },
  "workspaces": [
    "packages/testrunner",
    "packages/examples"
  ],
  "devDependencies": {
    "@types/node": "^17.0.40",
    "eslint": "^8.17.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  }
}
