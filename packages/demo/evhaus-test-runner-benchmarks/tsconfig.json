{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "lib": ["es2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": ["src/*.ts", "src/Alert/*", "src/Avatar/*"]
}
